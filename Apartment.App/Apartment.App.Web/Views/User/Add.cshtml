@model Apartment.App.Web.Models.UserViewModels.UserAddViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanıcı Ekleme Penceresi</h1>


<form id="addForm" method="post">
     
    <div class="form-group ">
        <div class="float-left">
            <label >Fatura Tipi Seçiniz :</label>
        </div>
        <div class="checkbox float-left">
            <label >
                Kullanıcı :
                <input type="checkbox"  checked="checked" disabled="disabled"   class="form-check"/>
            </label>
        </div>
        <div class="checkbox float-left">
            <label asp-for="User.UserIsAdmin">
                Admin :
                <input asp-for="User.UserIsAdmin" id="UserIsAdmin" class="form-check"/>
            </label>
        </div>
    </div>  
    
    <div class="form-group">
        <label asp-for="User.FirstName"></label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.LastName"></label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.TrIdentityNumber"></label>
        <input asp-for="User.TrIdentityNumber" class="form-control" />
        <span asp-validation-for="User.TrIdentityNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.PhoneNumber"></label>
        <input asp-for="User.PhoneNumber" class="form-control" />
        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="User.HasCar">
                Kullanıcı Aracı var mı?
                <input asp-for="User.HasCar" id="userHasCar" class="form-check" />
            </label>
        </div>
    </div>
    <div class="form-group" id="carPlateForm">
        <label asp-for="User.CarPlateNumber"></label>
        <input asp-for="User.CarPlateNumber" class="form-control" />
        <span asp-validation-for="User.CarPlateNumber" class="text-danger"></span>
    </div>

    <input class="btn btn-success" type="submit" value="KAYDET" />
  
</form>


@section Scripts {
<script>
    $(document).ready(function () {
        $("#userHasCar").change(function () {
            if ($(this).is(":checked")) {
                $("#addForm").find("#carPlateForm").show();
            } else {
                $("#addForm").find("#carPlateForm").hide();
            }
        });
    });
</script>
}
